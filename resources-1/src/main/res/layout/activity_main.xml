<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/catsInHouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/cats_in_house"
        style="?attr/textAppearanceDisplaySmall"
        android:layout_marginTop="@dimen/margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/animalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/animal_name"
        style="?attr/textAppearanceHeadlineSmall"
        android:layout_marginTop="@dimen/margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catsInHouse" />

    <TextView
        android:id="@+id/weightOfCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/cat_weight"
        style="?attr/textAppearanceHeadlineSmall"
        android:layout_marginTop="@dimen/margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animalName" />

    <TextView
        android:id="@+id/bdOfCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/cats_birthday"
        style="?attr/textAppearanceHeadlineSmall"
        android:layout_marginTop="@dimen/margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightOfCat" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/catName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bdOfCat">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_cat_name"
            android:inputType="none"
            app:simpleItems="@array/cat_names"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/catCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="I have 0 cats"
        style="?attr/textAppearanceHeadlineSmall"
        android:layout_marginTop="@dimen/margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catName" />

    <ImageView
        android:id="@+id/vector"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_face"
        android:contentDescription="@string/face"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catCount" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        app:icon="@drawable/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:text="@string/btn_face"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>