<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe"
    app:startDestination="@id/recipeFragment">

    <fragment
        android:id="@+id/recipeFragment"
        android:name="com.motorro.cookbook.recipe.RecipeFragment"
        android:label="@string/title_recipe"
        tools:layout="@layout/fragment_recipe">

        <argument
            android:name="recipeId"
            app:argType="string" />

        <action
            android:id="@+id/recipe_to_delete_confirmation"
            app:destination="@id/deleteConfirmationFragment" />

        <deepLink app:uri="@string/link_recipe" />

    </fragment>

    <dialog
        android:id="@+id/deleteConfirmationFragment"
        android:name="com.motorro.cookbook.recipe.DeleteConfirmationFragment"
        android:label="fragment_confirmation"
        tools:layout="@layout/fragment_confirmation" >
        <argument
            android:name="title"
            app:argType="string" />
    </dialog>
</navigation>