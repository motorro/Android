<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/cookbookFragment">

    <fragment
        android:id="@+id/cookbookFragment"
        android:name="com.motorro.cookbook.ui.CookbookFragment"
        android:label="fragment_cookbook"
        tools:layout="@layout/fragment_cookbook" >
        <action
            android:id="@+id/cookbook_to_recipe"
            app:destination="@id/recipeFragment" />
        <action
            android:id="@+id/cookbook_to_add"
            app:destination="@id/addRecipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/recipeFragment"
        android:name="com.motorro.cookbook.ui.RecipeFragment"
        android:label="fragment_recipe"
        tools:layout="@layout/fragment_recipe" >
        <argument
            android:name="recipeId"
            app:argType="integer" />
        <action
            android:id="@+id/recipe_to_delete_confirmation"
            app:destination="@id/deleteConfirmationFragment" />
    </fragment>
    <dialog
        android:id="@+id/deleteConfirmationFragment"
        android:name="com.motorro.cookbook.ui.DeleteConfirmationFragment"
        android:label="fragment_confirmation"
        tools:layout="@layout/fragment_confirmation" >
        <argument
            android:name="title"
            app:argType="string" />
    </dialog>
    <fragment
        android:id="@+id/addRecipeFragment"
        android:name="com.motorro.cookbook.ui.AddRecipeFragment"
        android:label="fragment_add_recipe"
        tools:layout="@layout/fragment_add_recipe" />

</navigation>